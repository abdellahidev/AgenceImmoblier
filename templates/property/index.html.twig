{% extends 'base.html.twig' %}

{% block title  'voir nos bien!' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
                <div class="form-row">

                    <div class="col">
                        {{ form_row(form.minSurface) }}
                    </div>

                    <div class="col">
                        {{ form_row(form.maxPrice) }}
                    </div>

                    <div class="col">
                        {{ form_row(form.lindicaps) }}
                    </div>


                    <div class="col">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>

                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Voir tous nos bien</h1>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include 'property/_property.html.twig' %}
                </div>

            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(properties) }}
            </div>
        </div>

    </div>
{% endblock %}
