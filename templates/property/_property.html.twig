<div class="card mb-4">
    {% if property.filename %}
    <img src="{{vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;">
    {% else %}
        <img src="{{ '/images/properties/empty.jpeg' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;">

    {% endif %}

    <div class="card-body">
        <h6 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h6>
       <!-- {{ property.description | nl2br}} -->
        <p class="card-text">{{ property.surface }} m2 - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size:1rem;font-weight:bold;">
            {{ property.formatedPrice }} $
        </div>
    </div>
</div>